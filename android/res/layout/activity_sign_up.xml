<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:textAlignment="center">

    <Button
        android:id="@+id/bt_signup_A_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Signup"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_repassword_A_Signup"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/tv_accountname_A_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Account \nname :"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tv_username_A_Signup"
        app:layout_constraintRight_toLeftOf="@id/et_accountname_A_Signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_A_Signup" />

    <TextView
        android:id="@+id/tv_username_A_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Username :"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tv_email_A_Signup"
        app:layout_constraintRight_toLeftOf="@id/et_username_A_Signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_accountname_A_Signup" />

    <TextView
        android:id="@+id/tv_email_A_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Email :"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tv_password_A_Signup"
        app:layout_constraintRight_toLeftOf="@id/et_email_A_Signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username_A_Signup" />

    <TextView
        android:id="@+id/tv_password_A_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Mật khẩu :"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tv_re_password_A_Signup"
        app:layout_constraintRight_toLeftOf="@id/et_password_A_Signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_A_Signup" />

    <TextView
        android:id="@+id/tv_re_password_A_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:text="Nhập lại \nmật khẩu :"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/bt_signup_A_Signup"
        app:layout_constraintRight_toLeftOf="@id/et_repassword_A_Signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_password_A_Signup" />

    <TextView
        android:id="@+id/tv_signup_A_Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="SIGNUP"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_accountname_A_Signup"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:hint="Nhập tên người dùng của bạn"
        app:layout_constraintBottom_toTopOf="@id/et_username_A_Signup"
        app:layout_constraintLeft_toRightOf="@id/tv_accountname_A_Signup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_A_Signup" />

    <EditText
        android:id="@+id/et_username_A_Signup"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:hint="Nhập tên đăng nhập bạn chọn"
        app:layout_constraintBottom_toTopOf="@id/et_email_A_Signup"
        app:layout_constraintLeft_toRightOf="@id/tv_username_A_Signup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_accountname_A_Signup" />

    <EditText
        android:id="@+id/et_email_A_Signup"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:hint="Nhập email của bạn"
        app:layout_constraintBottom_toTopOf="@id/et_password_A_Signup"
        app:layout_constraintLeft_toRightOf="@id/tv_email_A_Signup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_username_A_Signup" />

    <EditText
        android:id="@+id/et_password_A_Signup"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Nhập mật khẩu bạn chọn"
        app:layout_constraintBottom_toTopOf="@id/et_repassword_A_Signup"
        app:layout_constraintLeft_toRightOf="@id/tv_password_A_Signup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email_A_Signup" />

    <EditText
        android:id="@+id/et_repassword_A_Signup"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Nhập lại mật khẩu đã chọn"
        app:layout_constraintBottom_toTopOf="@id/bt_signup_A_Signup"
        app:layout_constraintLeft_toRightOf="@id/tv_re_password_A_Signup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password_A_Signup" />

</androidx.constraintlayout.widget.ConstraintLayout>