<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow">

    <TextView
        android:id="@+id/tv_roomname_A_waiting_room"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF1100"
        android:backgroundTint="#F3501C"
        android:gravity="center"
        android:text="Phòng X"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gamename_A_waiting_room" />


    <TextView
        android:id="@+id/tv_gamename_A_waiting_room"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Game Ô Ăn Quan"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_vs_A_waiting_room"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/vs"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_ready_A_waiting_room"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Sẵn sàng"
        android:textSize="30sp"
        android:textColor="#FF3D68"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:shadowColor="#F3DA05"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="5.0"
        app:layout_constraintLeft_toLeftOf="@id/iv_player2_A_waiting_room"
        app:layout_constraintRight_toRightOf="@id/iv_player2_A_waiting_room"
        app:layout_constraintBottom_toTopOf="@id/bt_start_A_waiting_room"/>

    <Button
        android:id="@+id/bt_start_A_waiting_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BẮT ĐẦU"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="80dp"/>

    <ImageView
        android:id="@+id/iv_player1_A_waiting_room"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/iv_vs_A_waiting_room"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="180dp"
        app:srcCompat="@mipmap/player1_foreground"
        tools:layout_editor_absoluteX="-70dp"
        app:layout_editor_absoluteY="-70dp"/>

    <ImageView
        android:id="@+id/iv_player2_A_waiting_room"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/bt_start_A_waiting_room"
        app:layout_constraintTop_toBottomOf="@id/iv_vs_A_waiting_room"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="180dp"
        app:srcCompat="@mipmap/player2_foreground"
        tools:layout_editor_absoluteX="200dp" />

    <TextView
        android:id="@+id/tv_player1_A_waiting_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_player1_A_waiting_room"
        app:layout_constraintRight_toLeftOf="@id/iv_vs_A_waiting_room"/>

    <TextView
        android:id="@+id/tv_player2_A_waiting_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_player2_A_waiting_room"
        app:layout_constraintLeft_toRightOf="@id/iv_vs_A_waiting_room"/>

    <Button
        android:id="@+id/bt_invite_A_waiting_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mời"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#95CD41"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_roomname_A_waiting_room"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/bt_kick_A_waiting_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đuổi"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#EA5C2B"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_invite_A_waiting_room"/>

    <ImageButton
        android:id="@+id/bt_back_A_waiting_room"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="10dp"
        android:background="@mipmap/back_button_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gamename_A_waiting_room"
        app:srcCompat="@mipmap/back_button_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>